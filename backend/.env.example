# Entorno
CONFIG_ENV=development
CONFIG_PORT=8080

# Base de Datos
CONFIG_DB_HOST=localhost
CONFIG_DB_PORT=5432
CONFIG_DB_USER=sorteos_user
CONFIG_DB_PASSWORD=sorteos_password
CONFIG_DB_NAME=sorteos_db
CONFIG_DB_SSLMODE=disable
CONFIG_DB_MAX_OPEN_CONNS=100
CONFIG_DB_MAX_IDLE_CONNS=10

# Redis
CONFIG_REDIS_HOST=localhost
CONFIG_REDIS_PORT=6379
CONFIG_REDIS_PASSWORD=
CONFIG_REDIS_DB=0

# JWT
CONFIG_JWT_SECRET=change-this-to-a-secure-random-string-min-32-chars
CONFIG_JWT_ACCESS_TOKEN_EXPIRY=15m
CONFIG_JWT_REFRESH_TOKEN_EXPIRY=168h

# Rate Limiting
CONFIG_RATE_LIMIT_LOGIN=5
CONFIG_RATE_LIMIT_REGISTER=3
CONFIG_RATE_LIMIT_RESERVATION=10
CONFIG_RATE_LIMIT_PAYMENT=5

# Stripe (Payment Provider)
CONFIG_STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
CONFIG_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
CONFIG_STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# SendGrid (Email)
CONFIG_SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
CONFIG_SENDGRID_FROM_EMAIL=noreply@sorteos.com
CONFIG_SENDGRID_FROM_NAME=Plataforma de Sorteos

# Twilio (SMS)
CONFIG_TWILIO_ACCOUNT_SID=your_twilio_account_sid
CONFIG_TWILIO_AUTH_TOKEN=your_twilio_auth_token
CONFIG_TWILIO_FROM_PHONE=+1234567890

# CORS
CONFIG_CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CONFIG_CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CONFIG_CORS_ALLOWED_HEADERS=Origin,Content-Type,Authorization,Idempotency-Key

# Logging
CONFIG_LOG_LEVEL=debug
CONFIG_LOG_FORMAT=json

# File Upload
CONFIG_UPLOAD_MAX_SIZE=10485760
CONFIG_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp
CONFIG_STORAGE_TYPE=local
CONFIG_STORAGE_PATH=./uploads

# S3 (si se usa)
# CONFIG_S3_BUCKET=sorteos-uploads
# CONFIG_S3_REGION=us-east-1
# CONFIG_S3_ACCESS_KEY=your_access_key
# CONFIG_S3_SECRET_KEY=your_secret_key

# Par√°metros de Negocio (defaults)
CONFIG_RAFFLE_MAX_ACTIVE_PER_USER=10
CONFIG_RAFFLE_MIN_SALE_PERCENTAGE=0.7
CONFIG_RESERVATION_TTL_MINUTES=5
CONFIG_PAYMENT_PLATFORM_FEE_PERCENTAGE=0.05
